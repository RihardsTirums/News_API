<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>News</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body style="background-color: whitesmoke  ">
<div class="container-fluid text-center"
     style="background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%); background-size: cover; background-repeat: no-repeat; background-position: center;">

    <div class="d-flex" style="height: 100px; width: auto">

            <img style="height: 100px; filter:  invert(100%) sepia(16%) saturate(7463%) hue-rotate(222deg) brightness(119%) contrast(115%);"class="img-fluid ps-5 pt-3 me-5 pe-5" src="../img/news-logo.png">

        <form action="" class="w-25 align-self-center mx-auto ms-0 ms-5 ps-3">
            <div class="input-group">
                <input type="text" name="search"
                       class="form-control border border-2 bg-gradient shadow-none rounded-0" placeholder="Search..."
                       aria-label="Recipient's username" aria-describedby="button-addon2">
                <button style="background-color: dimgray; background-color: dimgray" class="btn btn-light border-0 text-white" type="submit">Find
                </button>
            </div>
        </form>
       <div class="my-auto pe-3 d-flex ">
              <div class="pe-4 my-auto">
                  {% if user.name %}
                      <h6 class="m-0 text-light">Hi {{ user.name }}, Welcome!</h6>
                  {% endif %}
              </div>
           <a class="h6 btn btn-light text-white btn-lg" href="/login" style="background-color: slategrey;">
               <span class="glyphicon glyphicon-log-out"></span>Log In
           </a>
           <a  class="h6 btn btn-light text-white btn-lg ms-3" href="/register" style="background-color: slategrey;">
               <span class="glyphicon glyphicon-log-out"></span>Register
           </a>
           <a  class="h6 btn btn-light shadow btn-lg text-white ms-3" href="" style="background-color: deepskyblue;">
               <span class="glyphicon glyphicon-log-out"></span>Log out
           </a>
       </div>
    </div>
</div>

<div class="container my-5" >
    {% for row in articles|batch(3) %}
        <div class="row mt-5">
            {% for article in row %}
                <div class="col p-2">
                    <div class=" card p-4 border-0 rounded-0 py-4"
                         style="border-radius: 5px; box-shadow: 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px silver;">
                        {% if article.urlToImage %}
                            <img class="object-cover w-full h-56 rounded-lg lg:w-64" src="{{ article.urlToImage }}" >
                        {% else %}
                            <img class="object-cover w-full h-56 rounded-lg lg:w-64" src="../img/no-image.png" style="height: 100px; width: 100px">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ article.title }}</h5>
                            <p class="card-text">{{ article.description.Value }}</p>
                            <a href="{{ article.url }}" target="_blank" class="btn btn-outline-primary float-end">Read more</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
<footer class="text-center"
        style="background: linear-gradient(95deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 60%); background-size: cover; background-repeat: no-repeat; background-position: center;">
    <img src="../img/news-logo.png"
         style="height: 100px;filter:  invert(100%) sepia(16%) saturate(7463%) hue-rotate(222deg) brightness(119%) contrast(115%)">
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>

